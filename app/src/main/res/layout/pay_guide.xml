<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activities.PayGuide">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <View
                android:id="@+id/black_back"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginStart="25dp"
                android:layout_marginTop="30dp"
                android:background="@drawable/back_image_payguide"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:orientation="horizontal">



                <ImageView
                    android:layout_width="185dp"
                    android:layout_height="185dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="10dp"
                    android:src="@drawable/face_round" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:layout_marginTop="70dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Pay Guide"
                        android:layout_marginStart="30dp"
                        android:textColor="#304E7C"
                        android:textSize="20sp"
                        android:textStyle="bold" />

                    <View
                        android:layout_width="45dp"
                        android:layout_height="8dp"
                        android:layout_marginStart="55dp"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/blue_color" />

                </LinearLayout>

                <View
                    android:layout_width="35dp"
                    android:layout_height="30dp"
                    android:layout_marginTop="80dp" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="10dp"
                    android:layout_weight="1" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:orientation="horizontal">


                <LinearLayout
                    android:id="@+id/layout_creche"
                    android:layout_weight="1"
                            android:layout_width="197dp"
                            android:layout_height="180dp"
                            android:background="@drawable/pay_guide_layout"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="CRECHE"
                                android:textStyle="bold"
                                android:textColor="#304E7C"
                                android:layout_marginStart="20dp"
                                android:layout_marginTop="15dp"
                                android:textSize="20sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Haeredum deus facit non homo meaning – God makes heir not man."
                        android:layout_marginStart="10dp"
                        android:textColor="#304E7C"
                        android:textSize="14sp"
                        android:textStyle="bold" />


                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/btn_creche_apply"
                        android:layout_width="160dp"
                        android:layout_height="46dp"
                        android:layout_marginTop="15dp"
                        android:layout_gravity="center"
                        android:text="Apply now"
                        android:textAllCaps="true"
                        android:textSize="14sp"
                        android:textColor="@color/black"
                        android:background="@drawable/pay_guide_button_1"/>
                </LinearLayout>


                <LinearLayout
                    android:layout_weight="1"
                    android:layout_width="197dp"
                    android:layout_height="180dp"
                    android:background="#304E7C"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Pre-Nusery"
                        android:textStyle="bold"
                        android:textColor="@color/white"
                        android:textAllCaps="true"
                        android:layout_marginStart="20dp"
                        android:layout_marginTop="15dp"
                        android:textSize="20sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Haeredum deus facit non homo meaning – God makes heir not man."
                        android:layout_marginStart="10dp"
                        android:textColor="@color/white"
                        android:textSize="14sp"
                        android:textStyle="bold" />


                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/btn_pre_nursery_apply"
                        android:layout_width="160dp"
                        android:layout_height="46dp"
                        android:layout_marginTop="15dp"
                        android:layout_gravity="center"
                        android:text="Apply now"
                        android:textAllCaps="true"
                        android:textSize="14sp"
                        android:textColor="@color/white"
                        android:background="@drawable/pay_guide_button_2"/>

                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">


                <LinearLayout
                    android:layout_weight="1"
                    android:layout_width="197dp"
                    android:layout_height="180dp"
                    android:background="#304E7C"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="nursery"
                        android:textStyle="bold"
                        android:textAllCaps="true"
                        android:textColor="@color/white"
                        android:layout_marginStart="20dp"
                        android:layout_marginTop="15dp"
                        android:textSize="20sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Haeredum deus facit non homo meaning – God makes heir not man."
                        android:layout_marginStart="10dp"
                        android:textColor="@color/white"
                        android:textSize="14sp"
                        android:textStyle="bold" />


                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/btn_nursery_apply"
                        android:layout_width="160dp"
                        android:layout_height="46dp"
                        android:layout_marginTop="15dp"
                        android:layout_gravity="center"
                        android:text="Apply now"
                        android:textAllCaps="true"
                        android:textSize="14sp"
                        android:textColor="@color/white"
                        android:background="@drawable/pay_guide_button_2"/>
                </LinearLayout>


                <LinearLayout
                    android:layout_weight="1"
                    android:layout_width="197dp"
                    android:layout_height="180dp"
                    android:background="@drawable/pay_guide_layout"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="primary"
                        android:textStyle="bold"
                        android:textColor="#304E7C"
                        android:textAllCaps="true"
                        android:layout_marginStart="20dp"
                        android:layout_marginTop="15dp"
                        android:textSize="20sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Haeredum deus facit non homo meaning – God makes heir not man."
                        android:layout_marginStart="10dp"
                        android:textColor="#304E7C"
                        android:textSize="14sp"
                        android:textStyle="bold" />


                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/btn_primary_apply"
                        android:layout_width="160dp"
                        android:layout_height="46dp"
                        android:layout_marginTop="15dp"
                        android:layout_gravity="center"
                        android:text="Apply now"
                        android:textAllCaps="true"
                        android:textSize="14sp"
                        android:textColor="@color/black"
                        android:background="@drawable/pay_guide_button_1"/>
                </LinearLayout>
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Copyright 2023 | All Rights Reserved"
                android:layout_marginStart="10dp"
                android:textColor="@color/black"
                android:layout_marginTop="30dp"
                android:layout_gravity="center"
                android:textSize="8sp"
                android:textStyle="bold" />



        </LinearLayout>
    </ScrollView>
</LinearLayout>
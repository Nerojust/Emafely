<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/drawer_layout"
    tools:openDrawer="start"
    tools:context=".activities.StudentDashboard">

    <com.google.android.material.navigation.NavigationView
        android:id="@+id/nav_view_layout"
        android:layout_width="320dp"
        android:layout_height="match_parent"
        app:headerLayout="@layout/header"
        android:layout_gravity="start"/>



    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <androidx.appcompat.widget.Toolbar
                    android:id="@+id/toolbar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:minHeight="?attr/actionBarSize"
                    android:theme="?attr/actionBarTheme"/>

                <View
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"/>

                <LinearLayout
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="20dp"
                    android:background="@drawable/circle_profile"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/dashboard_image"
                        android:layout_width="28dp"
                        android:gravity="center"
                        android:src="@drawable/dashboard_image"
                        android:layout_height="28dp" />

                </LinearLayout>
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Welcome, John_Smith"
                android:textColor="#000000"
                android:textStyle="bold"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="10dp"
                android:textSize="20sp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <View
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"/>

                <LinearLayout
                    android:id="@+id/student_result"
                    android:layout_width="145dp"
                    android:layout_height="95dp"
                    android:layout_marginTop="20dp"
                    android:orientation="vertical"
                    android:background="@drawable/page_seven">

                    <LinearLayout
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_marginTop="17dp"
                        android:layout_gravity="center"
                        android:background="@drawable/circle_dashboard"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="34dp"
                            android:layout_height="34dp"
                            android:layout_marginTop="5dp"
                            android:src="@drawable/page_seven_one"
                            android:layout_gravity="center"/>
                    </LinearLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Check Result"
                        android:gravity="center"
                        android:textSize="12sp"
                        android:layout_marginTop="3dp"
                        android:textColor="#000000"/>
                </LinearLayout>


                <LinearLayout
                    android:layout_width="145dp"
                    android:layout_height="95dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="35dp"
                    android:orientation="vertical"
                    android:background="@drawable/page_seven">

                    <LinearLayout
                        android:id="@+id/student_fee"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_marginTop="17dp"
                        android:layout_gravity="center"
                        android:background="@drawable/circle_dashboard"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="34dp"
                            android:layout_height="34dp"
                            android:layout_marginTop="8dp"
                            android:src="@drawable/hundred_page"
                            android:layout_gravity="center"/>

                    </LinearLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Pay fees"
                        android:gravity="center"
                        android:layout_marginTop="3dp"
                        android:textSize="12sp"
                        android:textColor="#000000"/>
                </LinearLayout>

                <View
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"/>

            </LinearLayout>

              <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <View
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"/>

            <LinearLayout
                android:id="@+id/check_assignment"
                android:layout_width="145dp"
                android:layout_height="95dp"
                android:layout_marginTop="10dp"
                android:orientation="vertical"
                android:background="@drawable/page_seven">

                <LinearLayout
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginTop="17dp"
                    android:layout_gravity="center"
                    android:background="@drawable/circle_dashboard"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="34dp"
                        android:layout_height="34dp"
                        android:layout_marginTop="7dp"
                        android:src="@drawable/student_assignment_image"
                        android:layout_gravity="center"/>
                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Assignment"
                    android:gravity="center"
                    android:textSize="15sp"
                    android:layout_marginTop="3dp"
                    android:textColor="#000000"/>
            </LinearLayout>


            <LinearLayout
                android:layout_width="145dp"
                android:layout_height="95dp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="35dp"
                android:orientation="vertical"
                android:background="@drawable/page_seven">

                <LinearLayout
                    android:id="@+id/student_news_event"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginTop="17dp"
                    android:layout_gravity="center"
                    android:background="@drawable/circle_dashboard"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="34dp"
                        android:layout_height="34dp"
                        android:layout_marginTop="10dp"
                        android:src="@drawable/student_new_event"
                        android:layout_gravity="center"/>

                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="News and Event"
                    android:gravity="center"
                    android:layout_marginTop="3dp"
                    android:textSize="15sp"
                    android:textColor="#000000"/>
            </LinearLayout>

            <View
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"/>

              </LinearLayout>

             <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <View
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"/>

            <LinearLayout
                android:id="@+id/student_PTA"
                android:layout_width="145dp"
                android:layout_height="95dp"
                android:layout_marginTop="10dp"
                android:orientation="vertical"
                android:background="@drawable/page_seven">

                <LinearLayout
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginTop="17dp"
                    android:layout_gravity="center"
                    android:background="@drawable/circle_dashboard"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="34dp"
                        android:layout_height="34dp"
                        android:layout_marginTop="5dp"
                        android:src="@drawable/student_faces"
                        android:layout_gravity="center"/>
                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Annoucement/PTA"
                    android:gravity="center"
                    android:textSize="15sp"
                    android:layout_marginTop="3dp"
                    android:textColor="#000000"/>
            </LinearLayout>


            <LinearLayout
                android:layout_width="145dp"
                android:layout_height="95dp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="35dp"
                android:orientation="vertical"
                android:background="@drawable/page_seven">

                <LinearLayout
                    android:id="@+id/student_holiday"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginTop="17dp"
                    android:layout_gravity="center"
                    android:background="@drawable/circle_dashboard"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="34dp"
                        android:layout_height="34dp"
                        android:layout_marginTop="8dp"
                        android:src="@drawable/student_holiday1"
                        android:layout_gravity="center"/>

                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Holidays"
                    android:gravity="center"
                    android:layout_marginTop="3dp"
                    android:textSize="15sp"
                    android:textColor="#000000"/>
            </LinearLayout>

            <View
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"/>

              </LinearLayout>

              <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <View
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"/>

            <LinearLayout
                android:id="@+id/student_FAG"
                android:layout_width="145dp"
                android:layout_height="95dp"
                android:layout_marginTop="10dp"
                android:orientation="vertical"
                android:background="@drawable/page_seven">

                <LinearLayout
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginTop="17dp"
                    android:layout_gravity="center"
                    android:background="@drawable/circle_dashboard"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="34dp"
                        android:layout_height="34dp"
                        android:layout_marginTop="8dp"
                        android:src="@drawable/student_fag"
                        android:layout_gravity="center"/>
                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="FAQ"
                    android:gravity="center"
                    android:textSize="15sp"
                    android:layout_marginTop="3dp"
                    android:textColor="#000000"/>
            </LinearLayout>


            <LinearLayout
                android:layout_width="145dp"
                android:layout_height="95dp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="35dp"
                android:orientation="vertical"
                android:background="@drawable/page_seven">

                <LinearLayout
                    android:id="@+id/student_update"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginTop="17dp"
                    android:layout_gravity="center"
                    android:background="@drawable/circle_dashboard"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="34dp"
                        android:layout_height="34dp"
                        android:layout_marginTop="8dp"
                        android:src="@drawable/student_update1"
                        android:layout_gravity="center"/>

                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Update"
                    android:gravity="center"
                    android:layout_marginTop="3dp"
                    android:textSize="12sp"
                    android:textColor="#000000"/>
            </LinearLayout>

            <View
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"/>

              </LinearLayout>













        </LinearLayout>
    </ScrollView>
</androidx.drawerlayout.widget.DrawerLayout>
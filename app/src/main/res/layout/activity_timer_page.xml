<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="#45608C"
    android:layout_height="match_parent"
    tools:context=".TimerPage">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/ic_baseline_west_24"
                android:layout_marginLeft="16dp"/>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Allocated Time"
                android:layout_marginTop="80dp"
                android:textColor="#FFFFFF"
                android:textSize="24sp"
                android:textStyle="bold"
                android:layout_gravity="center"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="2dp"
                android:layout_marginTop="50dp"
                android:src="@drawable/horiline"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="40dp" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="You have"
                android:layout_marginTop="60dp"
                android:textSize="32sp"
                android:layout_gravity="center"
                android:textColor=" #FFFFFF"/>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2m:20s"
                android:textSize="60sp"
                android:layout_gravity="center"
                android:textColor=" #FFFFFF"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="To answer each of the questions"
                android:textSize="16sp"
                android:layout_gravity="center"
                android:textColor=" #FFFFFF"/>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/button_four"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:background="@drawable/get_started"
                android:layout_marginTop="50dp"
                android:layout_marginLeft="50dp"
                android:layout_marginRight="50dp"
                android:textColor="#FFFFFF"
                android:text="Get Started"/>

            <LinearLayout
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:orientation="horizontal"
                android:layout_gravity="end"
                android:paddingLeft="35dp"
                android:layout_marginTop="30dp"
                android:layout_marginRight="16dp"
                android:background="@drawable/white_button">

                <ImageButton
                    android:id="@+id/button"
                    android:layout_width="30dp"
                    android:layout_marginTop="5dp"
                    android:layout_height="30dp"
                    android:background="@drawable/right_button"/>
            </LinearLayout>





        </LinearLayout>
    </ScrollView>
</LinearLayout>
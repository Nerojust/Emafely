               android:layout_marginTop="25dp"
               android:layout_marginStart="30dp"
               android:textSize="16sp"
               android:textStyle="bold"
               android:textColor="#304E7C"/>



           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:layout_marginTop="20dp"
               android:orientation="horizontal">

               <View
                   android:layout_weight="1"
                   android:layout_width="0dp"
                   android:layout_height="30dp"/>


               <LinearLayout
                   android:layout_width="145dp"
                   android:layout_height="100dp"
                   android:orientation="vertical"
                   android:layout_marginEnd="30dp"
                   android:background="@drawable/colommi">

                   <TextView
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:text="STAGE ONE:"
                       android:layout_gravity="center"
                       android:layout_marginTop="20dp"
                       android:textColor="#FFFFFF"
                       android:textStyle="bold"
                       android:textSize="10sp"/>

                   <TextView
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:text="The first stage is through a competitive entrance examination."
                       android:textColor="#FFFFFF"
                      android:layout_marginStart="10dp"
                       android:textSize="10sp"/>
                   
                   <View
                       android:layout_width="33dp"
                       android:layout_height="3dp"
                       android:layout_gravity="end"
                       android:layout_marginEnd="15dp"
                       android:layout_marginTop="10dp"
                       android:background="@drawable/arrow_main_page1"/>
               </LinearLayout>



               <LinearLayout
                   android:layout_width="145dp"
                   android:layout_height="100dp"
                   android:orientation="vertical"
                   android:background="@drawable/dark_blue_retangle">

                   <TextView
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:text="STAGE TWO:"
                       android:layout_gravity="center"
                       android:layout_marginTop="20dp"
                       android:textColor="#FFFFFF"
                       android:textStyle="bold"
                       android:textSize="10sp"/>


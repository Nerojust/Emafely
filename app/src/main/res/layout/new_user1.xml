<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="#45608C"
    android:layout_height="match_parent"
    tools:context=".activities.New_user1">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:layout_width="30.5dp"
                android:layout_height="30.32dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/ic_baseline_arrow_back_24"
                android:layout_marginLeft="16dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Emafely Divine"
                android:layout_gravity="center"
                android:layout_marginTop="40dp"
                android:textSize="20sp"
                android:textColor="#FFFFFF"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Treasure School"
                android:layout_gravity="center"
                android:textSize="20sp"
                android:textColor="#FFFFFF"/>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Parent/Guardian name"
                android:layout_marginTop="30dp"
                android:textSize="14sp"
                android:layout_marginLeft="16dp"
                android:textColor="#FFFFFF"/>

            <EditText
                android:id="@+id/et_parent_name"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:paddingLeft="20dp"
                android:layout_marginRight="16dp"
                android:layout_marginLeft="16dp"
                android:inputType="text"
                android:background="@drawable/box_edittext"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="UserName"
                android:layout_marginTop="10dp"
                android:textSize="14sp"
                android:layout_marginLeft="16dp"
                android:textColor="#FFFFFF"/>

            <EditText
                android:id="@+id/et_user_name1"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:paddingLeft="20dp"
                android:layout_marginRight="16dp"
                android:layout_marginLeft="16dp"
                android:inputType="text"
                android:background="@drawable/box_edittext"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="EmailAddress"
                android:layout_marginTop="10dp"
                android:textSize="14sp"
                android:layout_marginLeft="16dp"
                android:textColor="#FFFFFF"/>

            <EditText
                android:id="@+id/et_email_address"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:paddingLeft="20dp"
                android:layout_marginRight="16dp"
                android:layout_marginLeft="16dp"
                android:inputType="text"
                android:background="@drawable/box_edittext"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Name of child"
                android:layout_marginTop="10dp"
                android:textSize="14sp"
                android:layout_marginLeft="16dp"
                android:textColor="#FFFFFF"/>

            <EditText
                android:id="@+id/et_user_name"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:paddingLeft="20dp"
                android:layout_marginRight="16dp"
                android:layout_marginLeft="16dp"
                android:inputType="text"
                android:background="@drawable/box_edittext"/>


            <LinearLayout
                android:id="@+id/layout"
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:paddingLeft="35dp"
                android:background="@drawable/white_button"
                android:layout_gravity="end"
                android:layout_marginRight="20dp"
                android:layout_marginTop="20dp">

                <ImageView
                    android:id="@+id/view_button3"
                    android:layout_width="30dp"
                    android:layout_marginTop="5dp"
                    android:layout_height="30dp"
                    android:background="@drawable/arrowright_screen_3"/>


            </LinearLayout>











        </LinearLayout>
    </ScrollView>
</LinearLayout>
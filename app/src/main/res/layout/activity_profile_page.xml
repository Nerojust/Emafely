<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProfilePage">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_cancel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Cancel"
                    android:layout_marginTop="50dp"
                    android:layout_marginStart="20dp"
                    android:textSize="14sp"
                    android:textColor="#304E7C"/>

                <View
                    android:layout_width="90dp"
                    android:layout_height="50dp"/>

                <ImageView
                    android:id="@+id/IV_image"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/photo_background"
                    android:layout_gravity="center"/>

                <View
                    android:layout_width="90dp"
                    android:layout_height="50dp"/>

                <TextView
                    android:id="@+id/tv_done"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Done"
                    android:layout_marginTop="50dp"
                    android:layout_marginEnd="20dp"
                    android:textSize="14sp"
                    android:textColor="#304E7C"/>
            </LinearLayout>

            <Button
                android:id="@+id/btn_take_button"
                android:layout_width="130dp"
                android:layout_height="40dp"
                android:textSize="12sp"
                android:layout_gravity="center"
                android:text="Take Picture"/>
            
            
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginTop="40dp"
                android:background="@drawable/editbackground1"
                android:orientation="vertical">

                <EditText
                    android:id="@+id/et_first_name"
                    android:layout_width="match_parent"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"
                    android:layout_height="40dp"
                    android:hint="First Name"
                    android:inputType="text"
                    android:textStyle="bold"
                    android:textColorHint="#FFFFFF"
                    android:textSize="14sp"/>

                <EditText
                    android:id="@+id/et_last_name"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:hint="Last Name"
                    android:layout_marginEnd="20dp"
                    android:inputType="text"
                    android:layout_marginStart="20dp"
                    android:textStyle="bold"
                    android:textColorHint="#FFFFFF"
                    android:textSize="14sp"/>

            </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="40dp"
            android:background="@drawable/editbackground1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_additional_name1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:text="Additional Name"
                android:textStyle="bold"
                android:textSize="14sp"
                android:paddingStart="20sp"
                android:textColor="#FFFFFF"/>

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="40dp"
            android:background="@drawable/editbackground1"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_change_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Change Number"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:layout_marginTop="15dp"
                    android:textColor="#FFFFFF"
                    android:paddingStart="20dp"/>

                <View
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_weight="1"/>


                <EditText
                    android:id="@+id/tv_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="+23408037009013"
                    android:inputType="number"
                    android:textColorHint="#FFFFFF"
                    android:paddingEnd="20dp"
                    android:textSize="14sp"
                    android:layout_marginTop="15dp" />
            </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_user"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Username"
                    android:textStyle="bold"
                    android:textSize="14sp"
                    android:textColor="#FFFFFF"
                    android:paddingStart="20dp"/>

                <View
                    android:layout_width="50dp"
                    android:layout_height="30dp"
                    android:layout_weight="1"/>


                <TextView
                    android:id="@+id/tv_chukwu"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Kamsiyochukwu"
                    android:paddingEnd="38dp"
                    android:textSize="14sp"
                    android:textColor="#FFFFFF"/>
            </LinearLayout>
        </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginTop="40dp"
                android:background="@drawable/editbackground1"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_email1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:text="Email"
                    android:textStyle="bold"
                    android:textSize="14sp"
                    android:paddingStart="20sp"
                    android:textColor="#FFFFFF"/>

                <View
                    android:layout_width="30dp"
                    android:layout_height="50dp"/>

                <TextView
                    android:id="@+id/tv_emai1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Kamsi@gmail.com"
                    android:layout_marginTop="15dp"
                    android:paddingEnd="38dp"
                    android:textSize="14sp"
                    android:textColor="#FFFFFF"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginTop="40dp"
                android:background="@drawable/editbackground1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_login2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:text="Logout"
                    android:gravity="center"
                    android:textSize="14sp"
                    android:paddingStart="20sp"
                    android:textColor="#F5ADAD"/>

            </LinearLayout>





















        </LinearLayout>
    </ScrollView>
</LinearLayout>